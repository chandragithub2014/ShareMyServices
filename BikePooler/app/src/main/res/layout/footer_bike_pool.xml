<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent" android:layout_height="wrap_content"
    android:background="#ffffff">
<TextView
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:layout_alignParentLeft="true"
    android:paddingLeft="10dp"
    android:text="Find a ride"
    android:id="@+id/find_ride"
    android:paddingTop="10dp"
    android:textColor="#ff058fff"
    android:drawableLeft="@drawable/ride_search"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentRight="true"
        android:paddingRight="10dp"
        android:paddingTop="10dp"
        android:text="Offer a ride"
        android:id="@+id/offer_ride"
        android:textColor="#ff058fff"
        android:drawableLeft="@drawable/ride_offer"/>

</RelativeLayout>